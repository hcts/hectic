- form_for [@host, account] do |form|
  = form.error_messages

  .fields
    .field
      = form.label :username
      = form.text_field :username
    .field
      = form.label :password
      = form.text_field :password

  .buttons
    .button
      = form.submit 'Save'
      - unless current_page?(@host)
        or
        = link_to 'Cancel', @host